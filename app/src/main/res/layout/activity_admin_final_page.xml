<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".AdminFinalPage">

        <TextView
            android:id="@+id/textView22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:gravity="center_horizontal"
            android:text="Student Detail"
            android:textSize="34sp"
            android:textColor="#0000cd"/>


        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="Name"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/studentName"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:layout_weight="1"
            android:background="@drawable/box"
            android:drawableStart="@drawable/baseline_person_24"
            android:drawablePadding="10dp"
            android:hint="Name of the student"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="Roll No.                       "
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/studentRoll"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:layout_weight="1"
            android:background="@drawable/box"
            android:drawableStart="@drawable/baseline_format_list_numbered_rtl_24"
            android:drawablePadding="10dp"
            android:hint="roll number of the student"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="Section"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/studentSection"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:layout_weight="1"
            android:background="@drawable/box"
            android:drawableStart="@drawable/baseline_create_24"
            android:drawablePadding="10dp"
            android:hint="section of the student"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="Phone no."
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/studentPhone"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:layout_weight="1"
            android:background="@drawable/box"
            android:drawableStart="@drawable/baseline_local_phone_24"
            android:drawablePadding="10dp"
            android:hint="phone of the phone number"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="Project"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/studentProject"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:layout_weight="1"
            android:background="@drawable/box"
            android:drawableStart="@drawable/baseline_book_24"
            android:drawablePadding="10dp"
            android:hint="project name"
            android:padding="10dp"
            android:textSize="16sp"
            android:textColor="@color/black" />


        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="Organisation"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/studentOrganisation"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:layout_weight="1"
            android:background="@drawable/box"
            android:drawableStart="@drawable/baseline_meeting_room_24"
            android:drawablePadding="10dp"
            android:hint="name"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="Technology"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/studentTechnology"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:layout_weight="1"
            android:background="@drawable/box"
            android:drawableStart="@drawable/baseline_book_24"
            android:drawablePadding="10dp"
            android:hint="name"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="Mode"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/studentMode"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:layout_weight="1"
            android:background="@drawable/box"
            android:drawableStart="@drawable/baseline_mode_24"
            android:drawablePadding="10dp"
            android:hint="onine"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="Url of the project"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/studentUrl"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:layout_weight="1"
            android:background="@drawable/box"
            android:drawableStart="@drawable/baseline_link_24"
            android:drawablePadding="10dp"
            android:hint="Url"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>
</ScrollView>